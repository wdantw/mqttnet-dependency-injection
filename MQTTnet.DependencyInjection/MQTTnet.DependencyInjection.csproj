<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>MQTTnet.DependencyInjection</PackageId>
    <Version>1.0.0</Version>
    <Authors>Antonov D. A.</Authors>
    <Description>Extencion for MQTTNet. Integration with microsoft dependency injection</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/wdantw/mqttnet-dependency-injection</PackageProjectUrl>
    <RepositoryUrl>https://github.com/wdantw/mqttnet-dependency-injection</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <!--<PackageReadmeFile>README.md</PackageReadmeFile>-->
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MQTTnet" Version="5.0.1.1416" />
    <PackageReference Include="MQTTnet.Extensions.ManagedClient" Version="4.3.7.1207" />
  </ItemGroup>

</Project>
